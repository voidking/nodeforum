<!DOCTYPE html>
<html>
<head lang="zh-CN">
    <%- include ./partial/head %>
    <link rel="stylesheet" href="/css/index.css">
    <script src="/js/index.js"></script>
</head>

<body>
<%- include ./partial/header %>

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"><img src="/img/index/slide4.png"></div>
                    <div class="swiper-slide"><img src="/img/index/slide5.png"></div>
                    <div class="swiper-slide"><img src="/img/index/slide6.png"></div>
                </div>
                <!-- 分页器 -->
                <div class="swiper-pagination"></div>

                <!-- 导航按钮 -->
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>

                <!-- 滚动条 -->
                <div class="swiper-scrollbar"></div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container">
        <div class="row blocks">
            <% if(posts.length > 0){%>
            <% posts.forEach(function(post){%>
            <div class="col-sm-6 col-md-4 block">
                <a href="/post/<%= post._id%>" class="thumbnail pic">
                    <% if(post.image_urls.length > 0){%>
                    <img src="<%= post.image_urls[0]%>?imageView2/1/w/340/h/240"
                         alt="">
                    <% }else{%>
                    <img src="/img/index/pic3.png"
                         alt="">
                    <% }%>
                    <div class="title">
                        <h3>
                            <%= post.title%>
                        </h3>
                        <span>
                            <%= post.content%>
                        </span>
                        <small>
                            <%= post.group.groupname%>
                        </small>
                    </div>
                </a>
            </div>
            <% })%>
            <% }%>
        </div>
    </div>
</div>
<input type="hidden" id="error" value="<%= error%>"/>
<%- include ./partial/footer %>
</body>
</html>
